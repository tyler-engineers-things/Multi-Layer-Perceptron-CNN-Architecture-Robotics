<mujoco model="piper_scene">
  <include file="../../assets/thorlabs_breadboard/breadboard.xml"/>
  <include file="../../assets/agilex_piper/piper.xml"/>

  <statistic center="0 0 0.1" extent="0.4"/>
  <option gravity="0 0 -9.81"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <!-- YCB object assets -->
    <!-- bowl -->
    <!-- Visual -->
    <texture name="bowl_texture" type="2d" file="../../assets/ycb_objects/024_bowl/google_16k/texture_map.png"/>
    <material name="bowl_material" texture="bowl_texture"/>
    <mesh name="bowl_visual_mesh" file="../../assets/ycb_objects/024_bowl/google_16k/textured.obj"/>
    <!-- Collision -->
    <mesh name="bowl_collision_mesh" file="../../assets/ycb_objects/024_bowl/google_16k/textured_vhacd.stl"/>

  </asset>
  
  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- ======= YCB OBJECT ======= -->
    <!-- ======= Bowl Object ======= -->
    <body name="bowl" pos="0.3 0.2 0.04175" quat="1 0 0 0">
      <joint name="bowl_joint" type="free"/>
      <inertial pos="0 0 0" mass="0.779594" diaginertia="8.80012e-05 8.80012e-05 8.80012e-05" />

      <!-- Collision geometry -->
      <!-- Collision proxy (no visual), slightly thicker -->
      <geom name="bowl_col" type="cylinder" size="0.08 0.03" pos = "-0.015 -0.04 0.015" rgba="0 0 0 0"
            density="1200" contype="1" conaffinity="1"/>

      <!-- Visual geometry -->
      <geom name="bowl_visual" type="mesh" mesh="bowl_visual_mesh"
            material="bowl_material" conaffinity="0" contype="0" group="1" />
    </body>

    <!-- fixed tripod camera -->
    <camera name="top_cam" pos="0.2 0.0 0.45" euler="0 0 0" fovy="90"/>
    <camera name="side_cam" pos="0.3 -0.6 0.45" euler="45 0 0" fovy="60"/>

  </worldbody>
  
</mujoco>
